<?xml version="1.0" encoding="utf-8" ?>
<Project>
	<UsingTask TaskName="Obsidian.MSBuild.Pack" AssemblyFile="$(ObsidianTaskAssembly)" />
	<Target Name="ObsidianPublish" AfterTargets="Publish" Condition="$(PublishProvider) == 'ObsidianPlugin'">
		<Pack PublishDir="$(PublishDir)" ApiVersion="$(ApiVersion)"
			  PluginName="$(PluginName)" PluginVersion="$(PluginVersion)" />
	</Target>
</Project>