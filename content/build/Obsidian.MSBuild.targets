<?xml version="1.0" encoding="utf-8" ?>
<Project>
	<Target Name="PackPlugin" Condition="'$(Configuration)' == 'Release'" AfterTargets="AfterBuild;Publish">
		<MakeDir Directories="$(PluginPublishDir)"/>
		
		<Pack PluginName="$(PluginName)" PluginVersion="$(PluginVersion)"
			  PluginPublishDir="$(PluginPublishDir)" PluginApiVersion="$(PluginApiVersion)" PluginSigningKey="$(PluginSigningKey)"/>
	</Target>
</Project>